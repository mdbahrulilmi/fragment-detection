<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
             x:Class="fragment_detection.Views.ResultView"
             xmlns:vm="clr-namespace:fragment_detection.ViewModels;assembly=fragment-detection"
             xmlns:local="clr-namespace:fragment_detection.Views;assembly=fragment-detection">
	<UserControl.DataContext>
		<vm:ResultViewModel/>
	</UserControl.DataContext>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<local:HeaderView Grid.Row="0"/>

		<Popup Grid.Row="1" x:Name="DeletePopUp" Placement="Center" IsOpen="False">
			<local:Delete x:Name="DeleteControl"/>
		</Popup>

		<Grid Grid.Row="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<TextBlock Text="← Kembali"
                       HorizontalAlignment="Left"
                       Margin="40,40,0,10"
                       Foreground="#333"
                       FontSize="14"
                       Cursor="Hand"
                       PointerPressed="BackButtonClick"
                       Grid.Row="0"/>

			<Border Background="Transparent"
					Margin="0,0,0,-20" Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
            IsVisible="{Binding IsSingle}">
			<local:Card 
                        Margin="0,-20,0,0" />
				</Border>

			<ScrollViewer Grid.Row="1"
                          VerticalAlignment="Top"
                          HorizontalAlignment="Stretch"
                          Margin="0,10"
						  Padding="40, 0"
                          IsVisible="{Binding IsMultiple}">
				<local:Table x:Name="Table"/>
			</ScrollViewer>

			<Grid Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,10">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<Button Click="SaveButtonClick" Grid.Row="0" Cursor="Hand" HorizontalAlignment="Center" Foreground="White" Background="#3B89FF" FontWeight="SemiBold" Padding="8" Content="Simpan Hasil" Margin="0,0,0,5"/>

				<Button Click="DeleteButtonClick" Grid.Row="1" Cursor="Hand" HorizontalAlignment="Center" BorderBrush="#FF0000" Foreground="#FF0000" Background="White" FontWeight="SemiBold" Padding="8" Content="Hapus" Margin="0,5,0,0"/>
			</Grid>
		</Grid>
	</Grid>
</UserControl>
