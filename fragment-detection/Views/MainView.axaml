<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:fragment_detection.ViewModels"
             xmlns:views="clr-namespace:fragment_detection.Views"
             x:Class="fragment_detection.Views.MainView">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		
		<views:HeaderView Grid.Row="0" />

		<Grid Grid.Row="1">
		   
			<TextBlock x:Name="BackButton"
           Text="← Kembali"
           HorizontalAlignment="Left"
           Margin="40,40,0,10"
           Foreground="#333"
           FontSize="14"
           Cursor="Hand"
           PointerPressed="BackButtonClick"
           IsVisible="False"/>

			<Border Height="400" VerticalAlignment="Center" HorizontalAlignment="Center">
				<Grid>
					<Image x:Name="CameraFeed"
                           Width="350" Height="200"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           IsVisible="False"/>

					<Image x:Name="UploadedImage"
                           Width="350" Height="200"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           IsVisible="False"/>

					<Image x:Name="UploadMark"
                           Source="avares://fragment-detection/Assets/plus.png"
                           Width="170"
                           Height="170"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

					<TextBlock x:Name="UploadText"
                               Text="Tarik atau klik untuk masukkan gambar"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="16"
                               FontWeight="SemiBold"
                               TextAlignment="Center"/>

					<Rectangle x:Name="UploadPlaceholder"
                               Width="350" Height="200"
                               Stroke="#3B89FF"
                               StrokeThickness="1.6"
                               RadiusX="5" RadiusY="5"
                               StrokeDashArray="4,2"
                               Fill="Transparent"
                               PointerPressed="Rectangle_Clicked"
                               ClipToBounds="True"/>

					<Grid HorizontalAlignment="Center" VerticalAlignment="Bottom">
						<Grid.RowDefinitions>
							<RowDefinition Height="*"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>

						<Button Cursor="Hand"
                                x:Name="FragmentButton"
                                Click="FragmentButtonClick"
                                HorizontalAlignment="Center"
                                Foreground="White"
                                Padding="8"
                                Grid.Row="0">
							Hitung Fragmen
						</Button>

						<Grid Grid.Row="1">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto"/>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>

							<Image Source="avares://fragment-detection/Assets/camera.png"
                                   Grid.Column="0"
                                   Width="12"
                                   Margin="0,0,4,0"/>

							<TextBlock PointerPressed="TakePhoto_PointerPressed"
                                       Cursor="Hand"
                                       x:Name="TakePhoto"
                                       Grid.Column="1"
                                       Margin="0,14"
                                       FontSize="12"
                                       TextAlignment="Center"
                                       Text="Ambil Foto Langsung"
                                       Foreground="#3B89FF"/>
						</Grid>
					</Grid>
				</Grid>
			</Border>
			
		</Grid>
	</Grid>
</UserControl>
